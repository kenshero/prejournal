<%= stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track' => true %>
<%= render 'layouts/navbar' %>

  <div class="container">
  <ol class="breadcrumb">
    <li><%= link_to  'Staffs' , users_path %></li>
    <li class="active">Save Admin</li>
  </ol>
    <div class="form-login">
      <% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade in">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>           
        </div>  
      <% end %>
      <div class="head-form-login">
        <h2>Sign Up Staff</h2> 
      </div>
      <div class="body-form-login">
        <%= form_for(@user) do |f| %>
          <div class="field panel-label">
            <%= f.label :username , class: "label-head" %><br />
            <%= f.text_field :username , class: "form-control", autofocus: true %>
          </div>

          <div class="field panel-label">
            <%= f.label :password , class: "label-head" %>
            <%= f.password_field :password , class: "form-control", autocomplete: "off" %>
          </div>

          <div class="field panel-label">
            <%= f.label :password_confirmation , class: "label-head" %><br />
            <%= f.password_field :password_confirmation , class: "form-control", autocomplete: "off" %>
          </div>

             <%= f.hidden_field :admin , value:true %>
          <div class="actions">
            <%= f.submit "Sign up" ,class: "btn-primary" %>
          </div>
        <% end %>
      </div>
    </div> <!-- form-login -->
  </div>