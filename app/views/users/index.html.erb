<%= render 'layouts/navbar' %>

<div class="container">
  <ol class="breadcrumb">
    <li class="active">Staffs</li>
  </ol>
  <div class="row">
    <%= link_to '+ Add Staff' , new_user_path , class: 'btn btn-primary pull-right' %>
  </div>

  <div class="row">
    <table class="table table-striped">
      <thead>
        <th>No.</th>
        <th>Name</th>
        <th>Tools</th>
      </thead>
      <tbody>
        <% @users.each_with_index do |user,index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td class="col-md-5"><%= user.username %></td>
          <td>
            <%= link_to 'Edit' ,edit_user_path(user.id), class: "btn btn-warning" %>
            <%= link_to 'Delete', user_path(user.id),
                    method: :delete,
                    data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>